{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">
<script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="semantic/dist/semantic.min.js"></script>{% endblock %}
{% block body %}
    <h1>Recette index</h1>

    <table class=" ui table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Detail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.titre }}</td>
                <td>{{ recette.detail }}</td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}"class="ui button">show</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}"class="ui button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}"class="ui button">Create new</a>
{% endblock %}
