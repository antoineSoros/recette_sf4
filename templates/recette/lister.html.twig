{% extends 'base.html.twig' %}
{% block title %}Liste des Recettes{% endblock %}
{% block stylesheets %}<link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">
<script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="semantic/dist/semantic.min.js"></script>{% endblock %}

{% block body %}
    <h1>LISTE DES RECETTES</h1>
    <div class="ui list">
<ul>
    {% for recette in listeRecettes %}
        <a class="ui header" href="{{ path('recette_show', {'id': recette.id}) }}">
        <li style="list-style: none">NOM: {{recette.titre}}</li></a>
       
        <hr>
        {% endfor %}
        
            
    
</ul>
    </div>
       
{% endblock %}